@model RegistrationViewModel

@{
    var cultureInfo = new CultureInfo("en-US");
    CultureInfo.CurrentCulture = cultureInfo;
}

<div class="row">
    <div class="col mx-auto" style="max-width:30%">
        <h3>Register</h3>
        <form asp-controller="Account" asp-action="Register" method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="@Model.ReturnUrl" />
            <div class="form-group">
                <label asp-for="@Model.FirstName" class="control-label"></label>
                <input asp-for="@Model.FirstName" class="form-control" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.LastName" class="control-label"></label>
                <input asp-for="@Model.LastName" class="form-control" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="control-label"></label>
                <input asp-for="@Model.Email" class="form-control" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PhoneNumber" class="control-label"></label>
                <input asp-for="@Model.PhoneNumber" class="form-control" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Birthday" class="control-label"></label>
                <input asp-for="@Model.Birthday" type="date" class="form-control" />
                <span asp-validation-for="@Model.Birthday" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Login" class="control-label"></label>
                <input asp-for="@Model.Login" class="form-control" />
                <span asp-validation-for="@Model.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.PasswordHash" class="control-label"></label>
                <input asp-for="@Model.PasswordHash" type="password"class="form-control" />
                <span asp-validation-for="@Model.PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Country" class="control-label"></label>
                <input asp-for="@Model.Country" class="form-control" />
                <span asp-validation-for="@Model.Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.State" class="control-label"></label>
                <input asp-for="@Model.State" class="form-control" />
                <span asp-validation-for="@Model.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.City" class="control-label"></label>
                <input asp-for="@Model.City" class="form-control" />
                <span asp-validation-for="@Model.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Street" class="control-label"></label>
                <input asp-for="@Model.Street" class="form-control" />
                <span asp-validation-for="@Model.Street" class="text-danger"></span>
            </div>
            <div class="form-group m-1">
                <input class="btn btn-outline-success float right" type="submit" value="Log in" />
                <a class="btn btn-outline-secondary" href="@Model.ReturnUrl">Cancel</a>
            </div>
        </form>
    </div>
</div>