@model OrdersListViewModel

@{
    var currentRoute = "paginationOrder";
    var statuses = Model.OrderStatuses.Where(svm => svm.IsChecked).
        Select(svm => svm.Status).
        ToArray();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-3 bg-light border-right shadow-sm p-4">
            <form asp-controller="Order" asp-action="FilterOrdersByStatuses" method="post">
                <label><b>Statuses</b></label>
                @for(int i = 0;i<Model.OrderStatuses.Length;++i)
                {
                    <div class="form-group mb-1 mt-1">
                        <input type="checkbox" asp-for="@Model.OrderStatuses[i].IsChecked" class="form-check-input" name="statusViewModels[@i].IsChecked"/>
                        <label class="form-check-label" asp-for="@Model.OrderStatuses[i].IsChecked">
                            @Model.OrderStatuses[i].Status
                        </label>
                        <input type="hidden" asp-for="@Model.OrderStatuses[i].Status" name="statusViewModels[@i].Status" />
                    </div>
                }
                <button type="submit" class="btn btn-outline-dark">
                    Apply
                </button>
            </form>
        </div>
        <div class="col-9 p-4" style="overflow-y: auto; height: 700px">
            <h2 class="text-center">Orders</h2>
            @if (Model.Orders.Count() > 0)
            {
                <div page-model="@Model.PagingInfo" page-route=@currentRoute
                     page-url-orderStatuses = "@statuses"
                     page-arrow-class="btn"
                     page-class="btn p-1"
                     page-selected-class="btn bg-black text-white p-1"
                     class="d-flex flex-row shadow-sm m-2"
                     number-of-pages-from-selected-page-visible="3"
                     page-left-symbol="fa-solid fa-angle-left black"
                     page-right-symbol="fa-solid fa-angle-right"></div>
            }
            <table class="table table-striped table-bordered shadow">
                <thead class="table-dark">
                    <tr>
                        <th>Id</th>
                        <th>Status</th>
                        <th>Total price</th>
                        <th>Created at</th>
                        <th>More</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.Status</td>
                            <td>@order.TotalPrice.ToString()</td>
                            <td>@order.CreatedDate.ToString("g")</td>
                            <td><a asp-controller="Order" asp-action="Details" asp-route-orderId="@order.Id" class="btn border text-white bg-black">Details</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>